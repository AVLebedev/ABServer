<Window x:Class="ABServer.PasswordForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Выбор пароля" Height="300" Width="487" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <PasswordBox Name="passwordInput" HorizontalAlignment="Left" Height="26" Margin="99,87,0,0" VerticalAlignment="Top" Width="287" FontSize="14" KeyDown="passwordInput_KeyDown" GotFocus="passwordInput_GotFocus"/>
        <PasswordBox Name="passwordRepeat" HorizontalAlignment="Left" Height="26" Margin="99,158,0,0" VerticalAlignment="Top" Width="287" FontSize="14" KeyDown="passwordInput_KeyDown"/>
        <Label Content="Введите пароль: " HorizontalAlignment="Left" Margin="99,56,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Label Content="Повторите пароль: " HorizontalAlignment="Left" Margin="99,127,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Button Content="Готово" HorizontalAlignment="Right" Margin="0,0,21,19" VerticalAlignment="Bottom" Width="75" FontSize="14" Click="Button_Click"/>
        <Label Name="ValidationSummary" Content="" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="14" Foreground="#FFD62A2A"/>
    </Grid>
</Window>
